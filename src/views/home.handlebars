<div id="app" class="p-4 bg-slate-800/95 h-auto">
  <h1
    class="flex p-4 mb-4 justify-center font-mono text-2xl text-slate-200"
  >Welcome to Ephemer Gaming!</h1>
  <h2 class="flex p-2 justify-center font-mono text-2xl text-slate-200">Check
    our products:</h2>
  <div id="productsList" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {{#each products}}
      <div
        class="max-w-sm border rounded-lg shadow bg-gray-800 border-gray-700 m-1"
        id="{{this._id}}"
      >
        <div class="flex flex-wrap w-full p-2 justify-evenly">
          {{#each this.thumbnails}}
            <img
              src="{{this}}"
              alt="product image"
              class="aspect-square max-h-40 m-2 ring-4 rounded-xl"
            />
          {{/each}}
        </div>

        <div class="px-5 pb-5">
          <h5
            class="text-2xl font-semibold tracking-tight text-white"
          >{{this.title}}</h5>
          <p
            class="text-xs font-semibold tracking-tight text-white"
          >{{this.description}}</p>
          <div class="flex items-center justify-between">
            <p class="text-3xl font-bold text-white pt-2">${{this.price}}</p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
  <div class="w-auto mx-2">
    <br /><hr /><br />
  </div>
  <div class="flex justify-around w-auto m-2 bg-gray-800 px-8 py-8 rounded-xl">
    <h3 class="flex p-2 justify-center font-mono text-lg text-slate-200">Check
      our work with Socket.io, MongoDB and Mongoose:</h3>
    <a href="/realTimeProducts">
      <button
        class="text-slate-100 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center mr-2"
      >Go to Real Time section! üõ©Ô∏è</button>
    </a>
  </div>
  <div class="w-auto mx-2">
    <br /><hr /><br />
  </div>
  <div class="flex justify-around w-auto m-2 bg-gray-800 px-8 py-8 rounded-xl">
    <h3 class="flex p-2 justify-center font-mono text-lg text-slate-200">Chat with us:</h3>
    <a href="/chat">
      <button
        class="text-slate-100 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center mr-2"
      >Go to chat section! üí¨</button>
    </a>
  </div>
</div>